import p4 from '../../assets/images/Partners/p4.jpg'
import p5 from '../../assets/images/Partners/p5.jpg'
import p6 from '../../assets/images/Partners/p6.jpg'
import p7 from '../../assets/images/Partners/p7.jpg'
import p8 from '../../assets/images/Partners/p8.jpg'
import p9 from '../../assets/images/Partners/p9.jpg'
import p10 from '../../assets/images/Partners/p10.jpg'

const brands = [
  {
    id: 1,
    name: "Spotify",
    logo: p1,
  },
  {
    id: 2,
    name: "Slack",
    logo: p2,
  },
  {
    id: 3,
    name: "Paypal",
    logo: p3,
  },
  {
    id: 4,
    name: "Spotify",
    logo: p4,
  },
  {
    id: 5,
    name: "Slack",
    logo: p5,
  },
  {
    id: 6,
    name: "Paypal",
    logo: p6,
  },
  {
    id: 7,
